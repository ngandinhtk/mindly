{
  "version": "1.0.0",
  "homepage": "https://ngandinhtk.github.io/mindly",
  "description": "Root for Heroku deployment",
  "name": "mindly-root",
  "private": true,
  "scripts": {
    "deploy": "gh-pages -d client/build",
    "build": "cd client && npm run build",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "install:all": "cd client && npm install && cd ../server && npm install"
  },
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
